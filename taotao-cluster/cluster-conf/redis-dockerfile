# this Dockerfile must be run from 'taotao-cluster' directory using "-f" in order to access the third-party files
FROM ebd-img-common

ENV INST_STUFF /tmp/install-stuff
ENV INST_TMP /tmp/install-tmp

COPY ./third-party $INST_STUFF

COPY ./cluster-conf/redis-install.sh $INST_STUFF

RUN /bin/bash $INST_STUFF/redis-install.sh && rm -rf $INST_STUFF

#ENTRYPOINT ["", "", ""]
